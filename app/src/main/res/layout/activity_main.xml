<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="icm.censo.a3_code.com.censoicm.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">


        <Button
            android:id="@+id/cadastrarButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/cadastrat_icon_48dp"
            android:drawableStart="@drawable/cadastrat_icon_48dp"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:gravity="fill"
            android:text="Cadastrar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:clickable="true"/>

        <Button
            android:id="@+id/pesquisarButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/search_icon_48dp"
            android:drawableStart="@drawable/search_icon_48dp"
            android:gravity="fill"
            android:text="Pesquisar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:clickable="true"/>

        <Button
            android:id="@+id/compararButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/comparar_icon48dp"
            android:drawableStart="@drawable/comparar_icon48dp"
            android:gravity="fill"
            android:text="Comparar Frequência"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:clickable="true"/>

        <Button
            android:id="@+id/relatorioButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/relatorio_icon48dp"
            android:drawableStart="@drawable/relatorio_icon48dp"
            android:gravity="fill"
            android:text="Gerar Relatório"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:clickable="true"/>

        <Button
            android:id="@+id/sairButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/close_icon48dp"
            android:drawableStart="@drawable/close_icon48dp"
            android:gravity="fill"
            android:text="Sair"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:clickable="true"/>

    </GridLayout>
</RelativeLayout>
