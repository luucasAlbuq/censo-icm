<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="icm.censo.a3_code.com.censoicm.RelatorioDiaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/relatorio_secessao_frequencia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:text="Frequência"
            android:visibility="visible"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/relatorio_graf_dia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/relatorio_secessao_obreiros"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="Obreiros"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/relatorio_obreiro_louvor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_obreiro_louvor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_obreiro_louvor_resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_obreiro_palavra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_obreiro_palavra"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_obreiro_palavra_resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_obreiro_porta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_obreiro_porta"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_obreiro_porta_resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:textSize="15dp" />


            </GridLayout>


            <TextView
                android:id="@+id/relatorio_secessao_culto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="Informações do Culto"
                android:visibility="visible"
                android:gravity="center"
                android:textColor="@android:color/white"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/relatorio_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_data"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_data_resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_texto_biblico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_texto_biblico"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/relatorio_texto_biblico_resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:textSize="15dp" />


            </GridLayout>

            <TextView
                android:id="@+id/relatorio_louvores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="@string/relatorio_louvores"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/relatorio_louvores_resposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:drawablePadding="10dp"
                android:maxLines="7"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/relatorio_dom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:text="@string/relatorio_dom"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/relatorio_dom_resposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:drawablePadding="10dp"
                android:maxLines="7"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/salvarRelatorioDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:text="Baixar"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:drawableLeft="@drawable/download_icon30dp"
                android:drawableStart="@drawable/download_icon30dp"
                android:drawablePadding="5dp"
                android:textSize="17dp" />

            <Button
                android:id="@+id/compartilharRelatorioDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:text="Compartilhar"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:drawableLeft="@drawable/share_icon30dp"
                android:drawableStart="@drawable/share_icon30dp"
                android:drawablePadding="5dp"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
