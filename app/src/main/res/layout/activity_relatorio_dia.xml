<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@drawable/background"
    tools:context="icm.censo.a3_code.com.censoicm.RelatorioDiaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relatorio_dia_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="5dp"
                android:text="Frequência"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="visible">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/relatorio_graf_dia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:text="Obreiros"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/relatorio_obreiro_louvor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="@string/relatorio_obreiro_louvor"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_obreiro_louvor_resposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_obreiro_palavra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="@string/relatorio_obreiro_palavra"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_obreiro_palavra_resposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_obreiro_porta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="@string/relatorio_obreiro_porta"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_obreiro_porta_resposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>


                </GridLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:text="Informações do Culto"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/relatorio_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="@string/relatorio_data"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_data_resposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_texto_biblico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="@string/relatorio_texto_biblico"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/relatorio_texto_biblico_resposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:visibility="visible"
                        android:textColor="@android:color/white"/>


                </GridLayout>

                <TextView
                    android:id="@+id/relatorio_louvores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_louvores"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/relatorio_louvores_resposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:maxLines="7"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/relatorio_dom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:padding="5dp"
                    android:text="@string/relatorio_dom"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/relatorio_dom_resposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:drawablePadding="10dp"
                    android:maxLines="7"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/baixarRelatorioDia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_light"
                    android:drawablePadding="5dp"
                    android:text="Baixar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="17dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
