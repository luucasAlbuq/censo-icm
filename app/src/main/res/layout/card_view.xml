<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="icm.censo.a3_code.com.censoicm.ListaCensoActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp">

            <ImageView
                android:id="@+id/censo_icone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/comparar_icon48dp" />

            <TextView
                android:id="@+id/censo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/censo_icone"
                android:text="Censo: 15/06/2017"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/censo_date"
                android:layout_toRightOf="@+id/censo_icone">

                <TextView
                    android:id="@+id/censo_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/censo_date"
                    android:layout_toRightOf="@+id/censo_icone"
                    android:text="Total: "
                    android:layout_margin="5dp"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/censo_igreja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/censo_date"
                    android:layout_toRightOf="@+id/censo_icone"
                    android:text="Icm Azenha"
                    android:layout_margin="5dp"
                    android:textSize="15dp"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
