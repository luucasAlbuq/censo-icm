<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relatorio_geral_mes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="icm.censo.a3_code.com.censoicm.RelatorioMesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/relatorio_secessao_frequencia_resumo_mes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:text="Resumo"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/relatorio_resumo_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/relatorio_secessao_frequencia_total_visitante_me"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:text="Frequência Visitantes x Frequência Total"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/grafico_linha_total_mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <!-- Gráfico de Barra -->
        <!-- <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/grafico_total_mes"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/grafico_visitantes_mes"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" /> -->
        <TextView
            android:id="@+id/relatorio_secessao_frequencia_geral_mes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:text="Frequência Geral do Mês"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/grafico_geral_mes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/baixarRelatorioMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_blue_light"
                android:drawableLeft="@drawable/download_icon30dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/download_icon30dp"
                android:text="Baixar"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="17dp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
